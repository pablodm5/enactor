<assembly>
	<id>assembly</id>
	<baseDirectory></baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/enactor-lib</outputDirectory>
			<includes>
				<include>com.enactor:*:jar:*</include>
				<include>com.enactor.core:*:jar:*</include>
				<include>com.enactor.training:*:jar:*</include>
				<include>com.enactor.jaxb:*:jar:*</include>
				<include>com.enactor.pos:*:jar:*</include>
				<include>com.enactor.retail:*:jar:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/ext-lib</outputDirectory>
			<excludes>
				<exclude>com.enactor*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
